<Window x:Class="BookShelf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShelf"
        mc:Ignorable="d"
        Title="Bookshelf" Height="630
        " Width="1120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Variable view -->     
        <ContentControl Grid.Row="1"
            Content="{Binding CurrentView}" Margin="50">
        </ContentControl>

        <!-- Top menu -->
        <Border Background="LightGreen">
            <Image Source="pack://application:,,,/BookShelf;component/UserIcon.png" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
