<Window x:Class="BookStoreTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800" ResizeMode="NoResize">

    <Grid>
        <Image x:Name="coverImage" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top" Height="405" Width="309" Margin="10,10,0,0" />
        <Button Content="Next" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="NextBookButton_Click" Margin="676,0,0,9" Height="33" Width="92" />
        <Button Content="Back" HorizontalAlignment="Left" Click="BackButton_Click" Margin="579,0,0,9" VerticalAlignment="Bottom" Height="33" Width="92"/>

        <Label Content="Title:" FontSize="16" Height="35" Width="50" Margin="336,0,0,569" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Label x:Name="titleLabel" FontSize="14" VerticalAlignment="Bottom" Height="35" Margin="421,0,0,567" HorizontalAlignment="Left" Width="250"/>

        <Label Content="Author:" FontSize="16" Height="35" Width="65" Margin="336,0,0,529" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Label x:Name="authorLabel" FontSize="14" VerticalAlignment="Bottom" Height="35" Margin="421,0,0,527" HorizontalAlignment="Left" Width="250"/>

        <Label Content="Publisher: " FontSize="16" Height="35" Width="85" Margin="336,0,0,489" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Label x:Name="publisherLabel" FontSize="14" VerticalAlignment="Bottom" Height="35" Margin="421,0,0,487" HorizontalAlignment="Left" Width="250"/>

        <Label Content="Pages: " FontSize="16" Height="35" Width="55" Margin="336,0,0,449" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Label x:Name="pagesLabel" FontSize="14" VerticalAlignment="Bottom" Height="35" Margin="421,0,0,446" HorizontalAlignment="Left" Width="250"/>

        <TextBox x:Name="summaryTextBox" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="336,0,0,62" Width="432" Height="369" TextWrapping="Wrap" IsReadOnly="True"/>

        <Button x:Name="OpenPersonalCabinet" Content="Profile" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="32" HorizontalAlignment="Left" Width="92" Click="OpenPersonalCabinet_Click"/>

    </Grid>

</Window>