<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style for BookButton -->
    <Style x:Key="BookButtonTheme" TargetType="Button">
        <Setter Property="Width" Value="170"/>
        <Setter Property="Height" Value="110"/>
        <Setter Property="Margin" Value="3,0,3,0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.Style>
                            <!-- Style for the button grid -->
                            <Style TargetType="Grid">
                                <Setter Property="Background" Value="#adadad"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Image control for the cover -->
                        <Image Source="{Binding Path=CoverPath}"
                               Height="80"
                               Width="80"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="5"/>

                        <!-- TextBlock for the title -->
                        <TextBlock Text="{Binding Path=Title}"
                                   TextWrapping="Wrap"
                                   FontSize="10"
                                   FontFamily="/Files/Fonts/INTER/#Inter"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Height="40"
                                   Grid.Column="1"
                                   Margin="5"/>

                        <!-- TextBlock for the sale label -->
                        <TextBlock Text="Sale"
                                   Foreground="White"
                                   FontSize="12"
                                   Background="Red"
                                   FontWeight="SemiBold"
                                   Grid.Column="1"
                                   FontFamily="/Files/Fonts/INTER/#Inter"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Padding="4"
                                   Margin="0,10,0,0">
                            <TextBlock.Style>
                                <!-- Style for conditional visibility -->
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsDiscount}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- TextBlock for the cost price -->
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   FontFamily="/Files/Fonts/INTER/#Inter"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Padding="4"
                                   Grid.Column="1"
                                   Height="20"
                                   Margin="3">
                            <TextBlock.Style>
                                <!-- Style for conditional text and background -->
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Path=CostPrice}" />
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsDiscount}" Value="True">
                                            <Setter Property="Text" Value="{Binding Path=SalePrice}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for BookListBoxItem -->
    <Style x:Key="BookListBoxItemTheme" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Button Style="{StaticResource BookButtonTheme}" 
                            Content="{Binding}"
                            CommandParameter="{Binding}">
                        <Button.Command>
                            <Binding Path="DataContext._OpenBookPageCommand"
                                     RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ListBox}}"/>
                        </Button.Command>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
